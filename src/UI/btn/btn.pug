//- typr = [full, void, unboard, with-arrow]
mixin btn(type="full", isClicked, text="Click me")
    if type == "with-arrow"
        button(class = `btn btn_${type} icon-arrow`) #{text}
    else
        if isClicked
            button(class = `btn btn_${type}`) #{text}
        else 
            button(class = `btn btn_${type} btn_${type}-un`) #{text}